 <h1>My Patient</h1>

<% if @patients.count > 0 %>
 <table id="post_table" class="table table-striped table-bordered">
    <thead>
      <tr>
        <th>PatientName</th>
        <th>Address</th>
        <th>Phone</th>
        <th>Admit Date</th>
        <th colspan="3">Actions</th>
      </tr>
    </thead>

    <tbody>
      <% @patients.each do |patient| %>
        <tr>
          <td><%= patient.name %></td>
          <td><%= patient.address %></td>
          <td><%= patient.phone %></td>
          <td><%= patient.created_at.strftime('%c') %></td>
          <!-- <td><%#= link_to 'Show', post %></td>-->
          <td><%= link_to image_tag("/assets/edit.gif",size: "16"), edit_patient_path(patient), :class => "btn", :remote => true%></td>
          <td><%= link_to image_tag("/assets/delete.jpg",size: "16"), patient, method: :delete,class: 'delete_patient', :remote => true  %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <div><h3>No Patients associated with you. </h3></div>
<% end %>
<%= link_to "Add Patient", new_patient_path, :class => "btn_patient", :remote => true%>

<div id="patient_form">
  <%= render 'patients/new' %>
</div>
