
  <table class="table table-striped table-bordered">
  <thead>
    <th>Agent Name</th>
    <th>Address</th>
    <th>Phone</th>
    <th>Email</th>
    <th>Status</th>
  </thead>

  <tbody>
    <% @agents.each do |agent| %>

      <tr>
        <td><%= agent.name %></td>
        <td><%= agent.address %></td>
        <td><%= agent.phone %></td>
        <td><%= agent.email %></td>
        <td><%= show_status(agent.status) %></td>
        <td>
          <%if agent.status %>
            <%= link_to image_tag("reject.png", size: "25x25", alt: "Reject"), approve_reject_agent_manager_path(agent),method: :post, data: {confirm: "Are you sure to reject the patient?"} %>
          <% else %>
            <%= link_to image_tag("approve.png", size: "25x25", alt: "Approve"), approve_reject_agent_manager_path(agent),method: :post, data: {:confirm => 'Are you sure to approve the patient?'} %>
          <% end %>
        </td>
      </tr>

    <% end %>
  </tbody>
</table>