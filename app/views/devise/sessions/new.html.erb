<div class="container">

    <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <div class="panel panel-login">

        <div class="panel-heading">
          <div class="row">
            <div class="col-xs-6">
              <%= link_to 'Sign in', agents_path, class: 'active', id: 'login-form-link' %>
            </div>
            <div class="col-xs-6">
              <%= link_to 'Sign Up', 'javascript:void(0)', id: 'register-form-link' %>
            </div>
          </div>
          <hr>
        </div>

        <div class="panel-body">
          <div class="row">
           <div class="alert alert-danger" id="errordiv" style="display:none;">

           </div>

            <div class="col-lg-12">

              <%= form_for(resource, as: resource_name, url: session_path(resource_name),html: {:id=>"login-form",:role=>"form" ,:style=>"display: block;"}, remote: true) do |f| %>



                <div class="form-group">
                  <%= f.label :email %><br />
                  <%= f.email_field :email, autofocus: true,:id=>"username", :tabindex=>"1", :class=>"form-control", :placeholder=>"Username" %>

                </div>

                <div class="form-group">
                  <%= f.label :password %><br />
                  <%= f.password_field :password, autocomplete: "off",:id=>"password", :tabindex=>"2", :class=>"form-control", :placeholder=>"Password" %>

                </div>

                <% if devise_mapping.rememberable? -%>
                  <div class="form-group text-center">
                    <%= f.check_box :remember_me,:tabindex=>"3", :class=>"", :name=>"remember", :id=>"remember" %>
                    <%= f.label :remember_me %>
                  </div>
                <% end -%>

                <div class="form-group">
                  <div class="row">
                    <div class="col-sm-6 col-sm-offset-3">
                      <%= f.submit "Log in", :id=>"login-submit", :tabindex=>"4", :class=>"form-control btn btn-login", remote: true %>
                    </div>
                  </div>
                </div>
              <% end %>


              <%= form_for(resource, as: resource_name, url: registration_path(resource_name), :html => { :id=>"register-form", :role=>"form", :style=>"display: none;" }, remote: true) do |f| %>
              <%= devise_error_messages! %>



              <div class="form-group">
                <%= f.label :name %><br />
                <%= f.text_field :name, autofocus: true, :id=>"name", :tabindex=>"1", :class=>"form-control", :placeholder=>"Name" %>
                <span class="name errors" ></span>
              </div>

              <div class="form-group">
                <%= f.label :email %><br />
                <%= f.email_field :email, autofocus: true, :id=>"email", :tabindex=>"2", :class=>"form-control", :placeholder=>"Username" %>
                <span class="email errors" ></span>
              </div>

              <div class="form-group">
                <%= f.label :password %>
                <% if @minimum_password_length %>
                <em>(<%= @minimum_password_length %> characters minimum)</em>
                <% end %><br />

                <%= f.password_field :password, autocomplete: "off",:id=>"password", :tabindex=>"3", :class=>"form-control", :placeholder=>"Password" %>
                <span class="password errors" ></span>
              </div>

              <div class="form-group">
                <%= f.label :password_confirmation %><br />
                <%= f.password_field :password_confirmation, autocomplete: "off",:id=>"confirm-password", :tabindex=>"4", :class=>"form-control", :placeholder=>"Confirm Password" %>
                <span class="password_confirmation errors" ></span>
              </div>

              <div class="form-group">
                <%= f.label :address %><br />
                <%= f.text_area :address, autofocus: true, :id=>"address", :tabindex=>"5", :class=>"form-control", :placeholder=>"" %>

              </div>
              <div class="form-group">
                <%= f.label :phone %><br />
                <%= f.text_field :phone, autofocus: true, :id=>"phone", :tabindex=>"6", :class=>"form-control", :placeholder=>"Phone" %>
                <span class="phone errors" ></span>
              </div>


              <div class="form-group">
                  <div class="row">
                    <div class="col-sm-6 col-sm-offset-3">
                      <%= f.submit "Sign up",:id=>"register-submit", :tabindex=>"7", :class=>"form-control btn btn-register", remote: true %>
                    </div>
                  </div>
              </div>
            <% end %>



            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>